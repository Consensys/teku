        "description" : "Success response",
        "content" : {
          "application/json" : {
            "schema" : {
              "type" : "object",
              "required" : [ "data" ],
              "properties" : {
                "data" : {
                  "$ref" : "#/components/schemas/GetGasLimitData"
                }
              }
            }
          }
        }
      },
      "401" : {
        "description" : "Unauthorized, no token is found",
        "content" : {
          "application/json" : {
            "schema" : {
              "$ref" : "#/components/schemas/HttpErrorResponse"
            }
          }
